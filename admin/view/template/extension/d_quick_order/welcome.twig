{{ header }} {{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="form-inline pull-right">
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
                    <i class="fa fa-reply"></i>
                </a>
            </div>
            <h1>{{ heading_title }} {{ version }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li>
                        <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="panel panel-default panel-d-quick-order">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <style>
                    .panel-d-quick-order{
                        background: url('view/image/d_quick_order/background.svg');
                        background-color: #f8f9fc;
                    }

                    a#button-menu {
                        -webkit-appearance: none !important;
                    }

                    .welcome {
                        background-position: bottom;
                        background-repeat: repeat-x;
                        background-size: 100%;
                        min-height: 1025px;
                        padding-top: 50px;
                        padding-bottom: 32%;
                    }

                    .welcome-into {
                        text-align: center;
                        max-width: 500px;
                        margin: auto;
                    }

                    .welcome-into-logo {
                        padding-bottom: 15px;
                    }

                    .welcome-into-heading {
                        font-size: 30px;
                        font-weight: bold;
                        padding-bottom: 15px;
                    }

                    .welcome-into-text {
                        font-size: 18px;
                        padding-bottom: 30px;
                    }

                    .welcome-into-start {
                        padding-bottom: 30px;
                    }

                    .panel .panel-body {
                        padding: 0;
                    }
                </style>
                <div class="welcome">
                    <div class="welcome-into">
                        <div class="welcome-into-logo">
                            <img src="view/image/d_quick_order/logo.svg"/>
                        </div>
                        <div class="welcome-into-heading">{{ text_welcome_title }}</div>
                        <div class="welcome-into-text">{{ text_welcome_description }}</div>

                        <div class="welcome-into-start">
                            <a class="btn btn-primary btn-lg addSetting">{{ button_setup }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).on('click', '.addSetting', function () {
        $.ajax({
            type: 'post',
            url: '{{ quick_setup }}',
            data: null,
            dataType: 'json',
            beforeSend: function () {
                $('#form').fadeTo('slow', 0.5);
            },
            complete: function () {
                $('#form').fadeTo('slow', 1);
            },
            success: function (json) {
                location.href = json.redirect;

            }
        });

    })
</script>
{{ footer }}