{{ header }} {{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="form-inline pull-right">
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
                    <i class="fa fa-reply"></i>
                </a>
            </div>
            <h1>{{ heading_title }} {{ version }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li>
                        <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="panel panel-default panel-d-quick-order">
            <div class="panel-body">
                <style>
                    .panel-d-quick-order {
                        background-color: #ffffff;
                        background-position: bottom;
                        background-repeat: no-repeat;
                    }

                    a#button-menu {
                        -webkit-appearance: none !important;
                    }

                    .welcome {
                        background-position: bottom;
                        background-repeat: repeat-x;
                        background-size: 100%;
                        padding-top: 30px;
                        /*padding-bottom: 100px;*/
                    }

                    .welcome-into {
                        text-align: center;
                        max-width: 900px;
                        margin: auto;
                    }

                    .welcome-into-logo {
                        padding-bottom: 15px;
                    }

                    .welcome-into-logo img {
                        width: auto;
                        height: 240px;
                    }

                    .welcome-into-wrapper-item-image {
                        width: 100%;
                        display: flex;
                        flex-direction: row;
                        align-items: center;
                        justify-content: space-around;
                    }

                    .welcome-into-item-image {
                        width: 130px;
                        height: 130px;
                    }

                    .welcome-into-wrapper-item-image h4 {
                        width: 100%;
                        text-align: center;
                        padding-top: 30px;
                        color: #545454;
                        font-weight: bold;
                    }

                    .welcome-into-heading {
                        font-size: 30px;
                        font-weight: bold;
                        padding-bottom: 15px;
                    }

                    .welcome-into-text {
                        font-size: 17px;
                        text-align: center;
                    }

                    .welcome-into-start {
                        padding: 70px 0 50px 0;
                    }

                    .panel .panel-body {
                        padding: 0;
                    }

                    .footer-image {
                        margin-top: 150px;
                        width: 100%;
                    }

                    @media (max-width: 600px) {
                        .welcome-into-wrapper-item-image {
                            flex-direction: column;
                        }
                    }
                </style>
                <div class="welcome">
                    <div class="welcome-into">
                        <div class="welcome-into-logo">
                            <img src="view/image/d_quick_order/Icon_admin.svg"/>
                        </div>
                        <div class="welcome-into-heading">{{ text_welcome_title }}</div>
                        <div class="welcome-into-text">{{ text_welcome_description }}</div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="welcome-into-start">
                                    <a class="btn btn-primary btn-lg addSetting">{{ button_setup }}</a>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="welcome-into-wrapper-item-image">
                                <div class="col-md-4">
                                    <img class="welcome-into-item-image improves_conversion"
                                         src="view/image/d_quick_order/Improves_conversion.svg"/>
                                    <h4>Improves conversion</h4>
                                </div>
                                <div class="col-md-4">
                                    <img class="welcome-into-item-image customizable"
                                         src="view/image/d_quick_order/Customizable.svg"/>
                                    <h4>Customizable</h4>
                                </div>
                                <div class="col-md-4">
                                    <img class="welcome-into-item-image easy_install"
                                         src="view/image/d_quick_order/Easy_install.svg"/>
                                    <h4>Easy to install</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <img class="footer-image" src="view/image/d_quick_order/background.svg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).on('click', '.addSetting', function () {
        $.ajax({
            type: 'post',
            url: '{{ quick_setup }}',
            data: null,
            dataType: 'json',
            beforeSend: function () {
                $('#form').fadeTo('slow', 0.5);
            },
            complete: function () {
                $('#form').fadeTo('slow', 1);
            },
            success: function (json) {
                location.href = json.redirect;

            }
        });

    })
</script>
{{ footer }}